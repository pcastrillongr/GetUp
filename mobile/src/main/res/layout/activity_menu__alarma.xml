<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8fd2ca"
    tools:context="com.example.cristinavilas.getup.Menu_Alarma">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="376dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/menu2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            app:srcCompat="@drawable/alarma" />

        <ImageView
            android:id="@+id/anhadir"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView3"
            app:srcCompat="@drawable/anhadir" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="376dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="371dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/getupblue" />
    </LinearLayout>

</RelativeLayout>
